<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_margin="5dp"
    android:background="@color/colortext"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#80000000"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="500dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:orientation      ="vertical"
                    android:weightSum="15">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="วันที่ :"
                        android:textColor="@color/colorwhite"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="สถานี :"
                        android:textColor="@color/colorwhite"
                        android:textSize="14sp"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="ประเภทลูกค้า :"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="ประเภทรถ :"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Invoice :"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="เวลาเข้า :"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="เวลาออก :"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="ทะเบียนรถ :"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="เลขบัตร :"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="cardcode :"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="ค่าจอดรถ :"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="ค่าปรับค้างคืน :"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="ค่าปรับบัตรหาย :"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="จำนวนเงิน Amount :"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="ผู้ทำรายการ :"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        />













                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:orientation="vertical"
                    android:weightSum="15">

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="วันที่"
                        android:textColor="@color/colorwhite"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_building_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="สถานี"
                        android:textColor="@color/colorwhite"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_estamp_status"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="ประเภทลูกค้า"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txt_car_type_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="ประเภทรถ"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_receipt_no"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="invoice"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txt_carparking_in_time"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="เวลาเข้า"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />



                    <TextView
                        android:id="@+id/txt_carparking_out_time"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="เวลาออก"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txt_license_plate_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="ทะเบียนรถ"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />



                    <TextView
                        android:id="@+id/txt_card_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="เลขบัตร"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txt_card_code"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="cardcode"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />



                    <TextView
                        android:id="@+id/txt_payment_amount"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="ค่าจอดรถ"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />



                    <TextView
                        android:id="@+id/txt_payment_fine_amount"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="ค่าปรับค้างคืน"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />



                    <TextView
                        android:id="@+id/txt_payment_card_lost"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />



                    <TextView
                        android:id="@+id/txt_payment_totle"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="ราคาสุทธิ"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_admin_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="ผู้ทำรายการ"
                        android:textColor="@color/colorwhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_overlay"></View>

</android.support.v7.widget.CardView>


</RelativeLayout>